<img class="main-image" src="assets/img/Asset 1.png" alt="Burger icnon">
<h1>Create a burger!!</h1>

<div class="row">
    <div class="col-md-12">
        <form class="create-form" action="submit">
            <input id="input" type="text" name="burger_name" placeholder="Enter a burger you want to devoure!">
            <button type="submit" class="btn-primary create-btn">Create</button>
        </form>
    </div>
</div>
<h2>All the burgers that I have devoured!</h2>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>DB has not Eaten yet</h3>
            <ul class="list notDev-list">
                {{#each burger}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                    <button class="btn-primary change-devoured" data-id="{{burger_id}}">Devour</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="list col-md-6">
            <h3>DB has Devoured!</h3>
            <ul class="dev-list">
                {{#each burger}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>